  "cmake.ignoreCMakeListsMissing": true,

  // Clangd 配置
  "clangd.arguments": [
    "--background-index",
    "--compile-commands-dir=${workspaceFolder}",
    "--completion-style=detailed",
    "--header-insertion=never",
    "--query-driver=F:\\Software\\Develop\\mingw\\mingw64\\bin\\g*.exe",
    "--clang-tidy"
  ],

  // Code Runner 配置
  "code-runner.executorMap": {
    "cpp": "cd $workspaceRoot; if (!(Test-Path build)) { mkdir build }; g++ -std=c++23 -Wall -Wextra -O2 $fullFileName -o build/$fileNameWithoutExt.exe; .\\build\\$fileNameWithoutExt.exe"
  },
  "code-runner.customCommand": "",
  "code-runner.defaultLanguage": "cpp",
  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": true,
  "code-runner.saveAllFilesBeforeRun": false,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.showExecutionMessage": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,

  // 禁用 C/C++ 插件
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.errorSquiggles": "disabled",

  // 其他设置
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // 排除文件
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // 搜索排除
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": false // 允许搜索 build 目录
  }
}
